# Trade XYZ Dashboard - Environment Variables Template
# Copy this file to .env and fill in your actual values

# API Configuration
# Base URL for the trading API
VITE_API_BASE_URL=https://api.tradingplatform.com

# API authentication key
VITE_API_KEY=your_api_key_here

# WebSocket URL for real-time data
VITE_WEBSOCKET_URL=wss://ws.tradingplatform.com

# Application Environment
# Options: development, staging, production
VITE_APP_ENV=development

# App Configuration
VITE_APP_NAME=Trade XYZ Dashboard
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_REAL_TIME_DATA=true
VITE_ENABLE_ADVANCED_CHARTS=true

# Logging
# Options: debug, info, warn, error
VITE_LOG_LEVEL=info

# Timeout Configuration (in milliseconds)
VITE_API_TIMEOUT=30000
VITE_WEBSOCKET_RECONNECT_INTERVAL=5000

# Market Data
# Polling interval for market updates (in milliseconds)
VITE_MARKET_DATA_POLL_INTERVAL=5000

# Portfolio Configuration
VITE_DEFAULT_CURRENCY=USD
VITE_PORTFOLIO_UPDATE_INTERVAL=10000

# Chart Configuration
VITE_CHART_DEFAULT_PERIOD=1D
VITE_CHART_DEFAULT_TYPE=candlestick

# Authentication (if applicable)
# VITE_AUTH_PROVIDER=oauth # Options: oauth, jwt, none
# VITE_AUTH_CLIENT_ID=your_client_id
# VITE_AUTH_DOMAIN=your_auth_domain

# External Services
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# VITE_AMPLITUDE_API_KEY=your_amplitude_key

# Development Tools
# Enable Redux DevTools (development only)
VITE_ENABLE_REDUX_DEVTOOLS=true

# Note: Never commit actual credentials to version control
# Always use .env.local for sensitive information
